{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container">
		<div
			class="row mt-5">
			<!-- First Part -->
			<div class="col-6 col-md-6 ps-6" data-controller="todolist-controls">
				<h2 class="mb-4">{{ lists|length }}
					Todo List(s)</h2>
				<div id="todo-list-container">
					{% for list in lists %}
						<div class="list">
							<div class="d-flex mb-3">
								<a href="#" class="btn btn-primary me-3" data-action="click->todolist-controls#loadItems" data-todolist-controls-url={{ path('app_todolists_detail', { 'id': list.id } ) }}>
									<i class="fas fa-play"></i>
								</a>
								<span class="details me-3">{{ list.name }}</span>
								<a href="#" class="btn btn-danger">
									<i class="fas fa-times"></i>
								</a>
							</div>
						</div>
					{% endfor %}
				</div>
				<button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addTodoListModal">
					<i class="fas fa-plus"></i>
					Add a new TodoList
				</button>
			</div>

			<!-- Bootstrap Modal for Adding a New TodoList -->
			<div class="modal fade" id="addTodoListModal" tabindex="-1" aria-labelledby="addTodoListModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="addTodoListModalLabel">Add New Todo List</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div
							class="modal-body">
							<!-- Use Turbo Frame for the form -->
							<turbo-frame id="add_todolist_form">
								<form action="{{ path('app_todolists_create') }}" method="post" data-controller="modal" data-action="turbo:submit-end->modal#close">
									<div class="mb-3">
										<label for="todoListName" class="form-label">Todo List Name</label>
										<input type="text" class="form-control" id="todoListName" name="name" required>
									</div>
									<button type="submit" class="btn btn-primary">Save</button>
								</form>
							</turbo-frame>
						</div>
					</div>
				</div>
			</div>

			<!-- Second Part -->
			<div class="col-6 col-md-6 ps-6" data-controller="item-controls">
				<div id="dynamic-content">Select an item to view details.</div>
			</div>
		</div>
	</div>
{% endblock %}
